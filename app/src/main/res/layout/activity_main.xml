<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_weather_overview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2F4F4F"
        android:gravity="center"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linear_weather_list"
        android:weightSum="4"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FF6347"
            android:layout_weight="1">
            <TextView
                android:id="@+id/weather_overview_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/weather_overview_padding"
                android:text="北京"/>

            <TextClock
                android:id="@+id/weather_overview_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:format12Hour="yyyy/MM/dd HH:mm:ss"
                android:format24Hour="yyyy/MM/dd HH:mm:ss"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/weather_overview_padding" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#98FB98"
            android:layout_weight="2"
            android:weightSum="4"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/weather_overview_temperature"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="18°"
                android:gravity="center"
                android:textSize="40dp"
                android:layout_weight="1">
            </TextView>
            <TextView
                android:id="@+id/weather_overview_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="晴"
                android:gravity="center"
                android:textSize="40dp"
                android:layout_weight="2">
            </TextView>
            <ImageView
                android:id="@+id/weather_overview_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@mipmap/icon999"
                android:layout_weight="1">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FF8C00"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/weather_overview_wind"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="东风"
                android:gravity="center"
                android:layout_weight="1">
            </TextView>
            <TextView
                android:id="@+id/weather_overview_sunny"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="紫外线弱"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_weight="2">
            </TextView>
            <TextView
                android:id="@+id/weather_overview_wet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="相对湿度47"
                android:layout_weight="1">
            </TextView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_weather_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#D4F2E7"
        android:gravity="center"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toBottomOf="@+id/linear_weather_overview"
        app:layout_constraintBottom_toTopOf="@+id/linear_weather_other"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal" >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weather_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_weather_other"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#008080"
        android:gravity="center"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/linear_weather_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="2"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:text="实时空气质量"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/weather_air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:text="全国预警数量"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/weather_waring"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>